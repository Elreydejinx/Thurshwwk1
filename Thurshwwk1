# The calculator app

def add(x, y):
    return x + y
def subtract(x, y):
    return x - y
def multiply(x, y):
    return x * y
def divide(x, y):
    return x / y
print("Choose an operations: add, subtract, multiply, divide:")

while True:
    operation = input("add, subtract, multiply, divide:")

    if operation in ("add","subtract","multiply","divide"):
        try:
            num_1 = float(input("select 1st number"))
            num_2 = float(input("select 2nd number"))
        except ValueError:
            print("numbers are the only accepted input try agian")
            continue
        if operation == "add":
            print(add(num_1, num_2))
        elif operation == "subtract":
            print(subtract(num_1, num_2))
        elif operation == "multiply":
            print(multiply(num_1, num_2))
        elif operation == "divide":
            print(divide(num_1, num_2))
    else:
        print("continue yes/no:")

        break

# The Shopping list

item = input("what are we adding to the shopping_cart?:")
shopping_cart = input(item)
remove = input("what are we removing from shopping_cart?:")
if shopping_cart == input(item):
    print(shopping_cart.append[item],"add to cart, remove, or done:")
elif shopping_cart == remove:
    print("what are we removing from shopping_cart?:")
    print(shopping_cart.remove(item))
    
else:
    print(f"{item} isn't in shopping_cart!")
    print(shopping_cart)
